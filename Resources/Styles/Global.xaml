<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style BasedOn="{StaticResource TextBlockDefault}" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#cacaca" />
    </Style>
    <Style BasedOn="{StaticResource TextBoxBaseStyle}" TargetType="TextBox">
        <Setter Property="Foreground" Value="#cacaca" />
        <Setter Property="Background" Value="#252528" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style
        x:Key="NeoButtonStyle"
        BasedOn="{StaticResource ButtonDefault}"
        TargetType="Button">
        <Setter Property="Margin" Value="4,0,0,0" />
        <Setter Property="BorderThickness" Value="0" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#141414" />
            </Trigger>

        </Style.Triggers>
    </Style>
    <Style TargetType="Hyperlink">
        <Setter Property="Foreground" Value="#cacaca" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#5D8CF9" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>